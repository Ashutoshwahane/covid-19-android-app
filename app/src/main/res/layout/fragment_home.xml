<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#37474F"
    >

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/confirmedTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/text_home"
        android:layout_marginTop="40dp"
        android:text="@string/confirmed_cases"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#FFEA00"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/confirmedNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/confirmedTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/deathsTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmedNumberTextView"
        android:layout_marginTop="40dp"
        android:text="@string/deaths"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#FFEA00"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/deathsnumberTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/deathsTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/recoveredTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deathsnumberTextView"
        android:layout_marginTop="40dp"
        android:text="@string/recovered"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#FFEA00"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/recoverednumberTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/recoveredTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        />


</androidx.constraintlayout.widget.ConstraintLayout>